{
  "printWidth": 120,
  "singleQuote": true,
  "jsxSingleQuote": false,
  "trailingComma": "all",
  "useTabs": false,
  "tabWidth": 2,
  "semi": true,
  "arrowParens": "always",
  "bracketSpacing": true,
  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "importOrder": [
    "^react",
    "<THIRD_PARTY_MODULES>",
    "^@",
    "^layouts/(.*)$",
    "^pages/(.*)$",
    "^components/(.*)$",
    "^util/(.*)$",
    "^shared/(.*)$",
    "^data/(.*)$",
    "^assets/(.*)$",
    "^[./].*(?<!\\.(c|le|sc)ss)$",
    "\\.(c|le|sc)ss$"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "importOrderParserPlugins": ["jsx", "typescript", "decorators"]
}
